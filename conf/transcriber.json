{
    "experiment_name": "padac-shallow-transcriber",
    "data": {
      "dataset_path": "/path/to/features/",
      "labels_path": "/path/to/labels/"
    },
    "model": {
      "name": "LinearModel",
      "params": {
        "in_features": 1024,
        "out_features": 128,
        "hidden_units": 512
